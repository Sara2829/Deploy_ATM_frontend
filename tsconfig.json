{
  "compilerOptions": {
    /* Target modern JavaScript for compatibility with modern browsers */
    "target": "ES2020",
    /* Allow using class fields */
    "useDefineForClassFields": true,
    /* Specify the libraries to include in the compilation */
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    /* Set the module system to ESNext for bundler compatibility */
    "module": "ESNext",
    /* Skip type checking for declaration files */
    "skipLibCheck": true,

    /* Module resolution strategy for bundler environments like Vite */
    "moduleResolution": "bundler",
    /* Allow importing TypeScript files with extensions */
    "allowImportingTsExtensions": true,
    /* Enable importing JSON modules */
    "resolveJsonModule": true,
    /* Enforce isolation of modules for better type checking */
    "isolatedModules": true,
    /* Do not emit output files (handled by Vite) */
    "noEmit": true,
    /* Use JSX syntax for React */
    "jsx": "react-jsx",

    /* Enable stricter type-checking options */
    "strict": false,
    /* Do not warn about unused locals */
    "noUnusedLocals": false,
    /* Do not warn about unused parameters */
    "noUnusedParameters": false,
    /* Ensure switch cases fall through are detected */
    "noFallthroughCasesInSwitch": true
  },
  /* Specify which files to include in the compilation */
  "include": ["src"],
  /* Include references to other configuration files */
  "references": [{ "path": "./tsconfig.node.json" }]
}
